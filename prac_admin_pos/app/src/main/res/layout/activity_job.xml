<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:stretchColumns="1">

        <TableRow android:padding="5dip">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="51dp"
                android:layout_height="74dp"
                android:layout_weight="1"
                android:contentDescription="logo"
                app:srcCompat="@drawable/ic_work_black_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Job"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Job Application"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please complete the form below to apply " />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="50dp"
                android:layout_weight=".20"
                android:gravity="center|center_vertical"
                android:text="Full Name"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-50dp"
                android:layout_weight="100"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="155dp"
            android:layout_marginTop="0dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:layout_weight=".20"
                android:gravity="center_horizontal"
                android:text=" Address"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-50dp"
                android:layout_weight="100"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="Street Address"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="Street Address Line 2"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="City"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="State"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/postal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="Postal/Zip Code"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Spinner
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="80"
                    android:entries="@array/countries"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="50dp"
                android:layout_weight=".20"
                android:gravity="center|center_vertical"
                android:text="Email Address"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-50dp"
                android:layout_weight="100"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="ex: name@mail.com"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="50dp"
                android:layout_weight=".20"
                android:gravity="center|center_vertical"
                android:text="Phone "
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-50dp"
                android:layout_weight="100"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/areaCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="Area Code"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="Phone"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="50dp"
                android:layout_weight=".20"
                android:gravity="center|center_vertical"
                android:text="Position"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-50dp"
                android:layout_weight="100"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/position"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="80"
                    android:entries="@array/positions"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="78dp"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="50dp"
                android:layout_weight=".20"
                android:gravity="center|center_vertical"
                android:text="Start Date"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-50dp"
                android:layout_weight="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="253dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="80"
                    android:gravity="center_vertical"
                    android:text="Select Date"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="78dp"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="50dp"
                android:layout_weight=".20"
                android:gravity="center|center_vertical"
                android:text="Resume"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-50dp"
                android:layout_weight="100"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/upload_button2"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="Upload a File" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="20dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="50dp"
                android:layout_weight=".20"
                android:gravity="center|center_vertical"
                android:text=" "
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="241dp"
                android:layout_height="61dp"
                android:layout_marginStart="-80dp"
                android:layout_marginEnd="80dp"
                android:layout_weight="100"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/cancel_button"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:backgroundTint="#00FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:src="@drawable/ic_cancel_i_foreground" />

                <ImageButton
                    android:id="@+id/send_button"
                    android:layout_width="168dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:backgroundTint="#00FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:src="@mipmap/ic_send_b_foreground" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</ScrollView>